﻿@{
    var Cpu = ViewData["CpuData"] as string;
    var CpuDetail = ViewData["CpuDetailData"] as Array;
    var MemData = ViewData["MemoryData"] as string;
    var CachedData= ViewData["CacheData"] as string;
    var SwapData = ViewData["SwapData"] as string;
    var DiskData = ViewData["DiskData"] as string;
    var Network = ViewData["NetworkData"] as Array;
}
@{
    Layout =
        "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enhanced Data Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="../../wwwroot/css/site.css" />
</head>
<body class="bg-dark text-light">
    <div class="container-fluid">
        <!-- Main Row -->
        <div class="row">
            <!-- Left Div -->
            <div class="col-md-3">
                <div class="custom-panel">
                    <h5 class="title"><i class="fas fa-database"></i> CPU</h5>
                    <div class="title-space">
                        <ul>
                            <li>@Cpu</li>
                            <br />
                            <br />
                            @foreach (string Detail in CpuDetail)
                            {
                                <li> @Detail </li>
                            }
                        </ul>
                    </div>
                    <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </div>

            <!-- Right Div -->
            <div class="col-md-9">
                <!-- First Row in Right Div -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="custom-panel">
                            <h5 class="title"><i class="fas fa-database"></i> DISK</h5>
                            <div class="title-space">
                                @{
                                    string[] DiskD = DiskData.Split("*");
                                    <ul>
                                        <li>@DiskD[0]</li>
                                        <br />
                                        <br />
                                        @{
                                            string DiskDetails = DiskD[1];
                                            string[] details2 = DiskDetails.Split("|-");
                                            int count = 0;
                                            <li class="DiskPanel">
                                                <br>
                                                <br>
                                                <br>
                                                @foreach (string item2 in details2)
                                                {
                                                    if (count != 0)
                                                    {
                                                        @item2
                                                        <br>
                                                    }
                                                    count++;
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                            <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-panel">
                            <h5 class="title"><i class="fas fa-database"></i> Memory</h5>
                            <div class="title-space">
                                <ul>
                                    <li>@MemData</li>
                                    <br />
                                    <br />
                                    <li>@CachedData</li>
                                    <li>@SwapData</li>
                                </ul>
                            </div>
                            <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-panel">
                            <h5 class="title"><i class="fas fa-database"></i> Network</h5>
                            <div class="title-space">
                                <ul>
                                    <li>Interfaces bandwidth usage:</li>
                                    <br />
                                    <br />
                                    @{
                                        int counter = 0;
                                        foreach (string interfaces in Network)
                                        {
                                            if (counter != 0)
                                            {
                                                <li>@interfaces</li>
                                            }
                                            counter++;
                                        }
                                    }
                                </ul>
                            </div>
                            <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Second Row in Right Div -->
                <div class="GeneralPanel container-fluid">
                    <!-- Row 1 -->
                    <div class="row">
                        <h2>row</h2>
                        <div class="col">
                            <h1>Column 1</h1>
                            <div>Column 2</div>
                        </div>
                    </div>
                    <!-- Row 2 -->
                    <div class="row">
                        <h2>row</h2>
                        <div class="col">
                            <h1>Column 1</h1>
                            <div>Column 2</div>
                        </div>
                    </div>
                    <!-- Row 3 -->
                    <div class="row">
                        <h2>row</h2>
                        <div class="col">
                            <h1>Column 1</h1>
                            <div>Column 2</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
