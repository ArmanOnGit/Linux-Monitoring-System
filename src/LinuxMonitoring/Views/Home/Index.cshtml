﻿@{
    var Cpu = ViewData["CpuData"] as string;
    var CpuDetail = ViewData["CpuDetailData"] as Array;
    var MemData = ViewData["MemoryData"] as string;
    var CachedData= ViewData["CacheData"] as string;
    var SwapData = ViewData["SwapData"] as string;
    var DiskData = ViewData["DiskData"] as string;
}
@{
    Layout =
        "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enhanced Data Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        /* Dark theme for panel */
        .custom-panel {
            background: linear-gradient(145deg, #000000, #1a1a2e);
            color: #e0e0e0;
            border: 1px solid #030821;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.6);
            transition: transform 0.3s, box-shadow 0.3s;
            max-width: auto;
            margin: 10px;
            height: fit-content;
        }


            /* Hover effect for panel */
            .custom-panel:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.8);
            }

            /* Panel heading */
            .custom-panel h5 {
                color: #00d4ff;
                font-weight: 700;
                display: flex;
                align-items: center;
                gap: 10px;
                margin-bottom: 20px;
            }

        /* Refresh button styling */
        .btn-refresh {
            display: inline-block;
            padding: 10px 10px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background: #0077b6;
            border: 1px solid #fff;
            border-radius: 25px;
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
            max-width: 40px;
            margin-left: auto;
        }

            .btn-refresh:hover {
                background-color: #005f8c;
                transform: scale(1.05);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            }

        /* List styling */
        .custom-panel ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .custom-panel ul li {
                padding: 10px;
                display: flex;
                align-items: center;
                border-radius: 12px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 2);
                overflow-y: auto;
                color: #b2bec3;
                font-family: "Courier New", monospace;
                font-size: 12px;
                line-height: 1.6;
                background-color: #34495e;
                margin-top: 8px;
            }

                .custom-panel ul li:last-child {
                    border-bottom: none;
                }

                .custom-panel ul li i {
                    color: #00d4ff;
                }

        /* Background styling */
        body {
            background: #2d3436;
        }

        .title-space {
            margin-top: 35px;
            margin-bottom: 9px;
        }
    </style>
</head>
<body class="bg-dark text-light">
    <div class="container-fluid p-3">
        <div class="row">
            <!-- Enhanced Top Left Panel -->
            <div class="col-lg-3 col-md-4 col-sm-12 custom-panel">
                <h5 class="title"><i class="fas fa-database"></i> CPU</h5>
                <div class="title-space">
                    <ul>
                        <li>@Cpu</li>
                        <br>
                        <br>
                        @foreach (string Detail in CpuDetail)
                        {
                            <li> @Detail </li>
                        }
                    </ul>

                </div>
                <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                    <i class="fas fa-sync-alt"></i>
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="custom-panel">
                    <h5 class="title"><i class="fas fa-database"></i> Memory</h5>
                    <div class="title-space">
                        <ul>
                            <li>@MemData</li>
                            <br>
                            <br>
                            <li>@CachedData</li>
                            <li>@SwapData</li>
                        </ul>
                    </div>
                    <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
                <div class="custom-panel">
                    <h5 class="title"><i class="fas fa-database"></i> DISK</h5>
                    <div class="title-space">
                        @{
                            string[] DiskD = DiskData.Split("*");
                            <ul>
                                <li>@DiskD[0]</li>
                                <br>
                                <br>
                                @{
                                    string idk = DiskD[1];
                                    string[] details2 = idk.Split("|-");
                                    string index0 = details2[0];
                                    details2[0] = " ";
					                <li>
                                        @index0
                                        <br>
                                        @foreach (string item2 in details2)
                                        {
                                            @item2
                                            <br>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                    <a href="#" class="btn-refresh mt-3" onclick="location.reload();">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
